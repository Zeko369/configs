{
  // ============================================
  // Vim mode
  // ============================================
  "agent_servers": {
    "claude": {
      "default_mode": "bypassPermissions"
    }
  },
  "vim_mode": true,
  "base_keymap": "VSCode",
  "relative_line_numbers": "enabled",
  "cursor_shape": "bar",

  // ============================================
  // Font
  // ============================================
  "buffer_font_family": "FiraCode Nerd Font",
  "buffer_font_size": 13.0,
  "ui_font_size": 16,

  // ============================================
  // Theme (auto light/dark)
  // ============================================
  "theme": {
    "mode": "system",
    "light": "Ayu Light",
    "dark": "Ayu Dark",
  },
  "icon_theme": "Material Icon Theme",

  // ============================================
  // Editor
  // ============================================
  "tab_size": 2,
  "soft_wrap": "none",
  "wrap_guides": [100],
  "show_whitespaces": "all",
  "ensure_final_newline_on_save": true,
  "show_edit_predictions": true,
  "gutter": {
    "line_numbers": true,
  },

  // ============================================
  // Git
  // ============================================
  "git": {
    "inline_blame": {
      "enabled": true,
      "show_commit_summary": true,
    },
  },
  "git_panel": {
    "collapse_untracked_diff": false,
    "tree_view": true,
    "status_style": "icon",
    "sort_by_path": true,
  },

  // ============================================
  // Project
  // ============================================
  "project_panel": {
    "auto_fold_dirs": false,
  },
  "session": {
    "trust_all_worktrees": true,
  },

  // ============================================
  // Terminal
  // ============================================
  "terminal": {
    "env": {
      "Q_NEW_SESSION": "1",
      "FIG_NEW_SESSION": "1",
    },
  },

  "languages": {
    "Ruby": {
      "language_servers": ["ruby-lsp", "!solargraph", "!steep"],
    },
  },

  "code_actions_on_format": {
    "source.organizeImports.biome": true,
    "source.fixAll.biome": true,
  },
}
